!!!5
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %title= "{{ page.title }}"
    ="{% if page.description %}"
    %meta{name: "description", content:"{{ page.description }}"}
    %meta{name: "author", content: "{{ site.author.name }}"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    ="{% endif %}"
    -#
      / Le HTML5 shim, for IE6-8 support of HTML elements
      /[if lt IE 9]
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>

    / Styles
    %link{href: "{{ ASSET_PATH }}/bootstrap/css/bootstrap.min.css", rel: "stylesheet", type: "text/css"}
    %link{href: "{{ ASSET_PATH }}/css/style.css?body=1", rel: "stylesheet", type: "text/css", media: "all"}

    / Fav and touch icons
    %link{rel: "shortcut icon", href: "{{ ASSET_PATH }}/imgs/favicon.ico"}
    -#
      %link{rel: "apple-touch-icon", href: "images/apple-touch-icon.png"}
      %link{rel: "apple-touch-icon", sizes: "72x72", href: "images/apple-touch-icon-72x72.png"}
      %link{rel: "apple-touch-icon", sizes: "114x114", href: "images/apple-touch-icon-114x114.png"}
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-38993454-1']);
      _gaq.push(['_setDomainName', 'casadelkrogh.dk']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body
    .container
      .navbar
        .navbar-inner
          .container
            %a.btn.btn-navbar{:href => "#", :"data-toggle" => "collapse", :"data-target"=> ".nav-collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{href: "{{ HOME_PATH }}"}= "{{ site.title }}"
            .nav-collapse
              %ul.nav
                :plain
                  {% assign pages_list = site.pages %}
                  {% assign group = 'navigation' %}
                  {% include JB/pages_list %}
              %ul.nav.pull-right
                %li
                  %a.feed-link{href:"/atom.xml"}
                    %img.feed-icon{src: "{{ ASSET_PATH}}/imgs/rss.png", alt: "feed"}
      .content
        .author-bio.cf.row
          .span7
            %img.author-img{src: "{{ ASSET_PATH }}/imgs/author.png"}          
            %p="{% include author-bio %}"
          %ul.span5.social-bar
            %li.social-icon
              %a{href: "https://plus.google.com/118226884430642597371/posts", title: "Google Plus"}
                %img{src: "{{ ASSET_PATH }}/imgs/social/gplus_64.png", alt: "Google Plus"}
            %li.social-icon
              %a{href: "http://www.linkedin.com/in/markuskrogh", title: "LinkedIn"}
                %img{src: "{{ ASSET_PATH }}/imgs/social/linkedin_64.png", alt: "LinkedIn"}
            %li.social-icon
              %a{href: "https://github.com/mkrogh", title: "Github"}
                %img{src: "{{ ASSET_PATH }}/imgs/social/github_64.png", alt: "Github"}
            %li.social-icon
              %a{href: "https://twitter.com/MarkusKrogh", title: "Twitter"}
                %img{src: "{{ ASSET_PATH }}/imgs/social/twitter_64.png", alt: "Twitter"}
        ="{{ content }}"
      %footer
        %p
          :plain
            &copy; {{ site.author.name }} 2012 
            with help from <a href="http://jekyllbootstrap.com" target="_blank" title="The Definitive Jekyll Blogging Framework">Jekyll Bootstrap</a>
            and <a href="http://twitter.github.com/bootstrap/" target="_blank">Twitter Bootstrap</a>

    / /container

    %script{src: "{{ ASSET_PATH }}/js/jquery-1.7.1.min.js", type: "text/javascript"}
    %script{src: "{{ ASSET_PATH }}/bootstrap/js/bootstrap-collapse.js", type: "text/javascript"}
    %script{src: "{{ ASSET_PATH }}/js/slider.js", type: "text/javascript"}
